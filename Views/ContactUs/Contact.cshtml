@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Venkant.Models.ContactFormModel
@{
    Layout = "~/Views/Shared/_LayoutFooter.cshtml";

}

<!-- header -->
<header id="page-top" class="blog-banner">
    <!-- Start: Header Content -->
    <div class="container" id="blog">
        <div class="row blog-header text-center wow fadeInUp" data-wow-delay="0.5s">
            <div class="col-sm-12">
                <!-- Headline Goes Here -->
                <h4><a href="index.html"> Home </a> / Contact </h4>
                <h3>Contact Us</h3>
            </div>
        </div>
        <!-- End: .row -->
    </div>
    <!-- End: Header Content -->
</header>
<!--/. header -->

<!-- End: Header Section
==================================================-->


<!-- Start: contact  Section 
==================================================-->
<section class="contact-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-sm-6 col-xs-12 inner-contact">
                <!-- Start: Heading -->
                <div class="base-header">
                    <h3>Send us <span class="ylow_clr">Message</span></h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipiscing elit. Phasellus id lectus quis dui euismod </p>
                </div>
                <!-- End:  heading -->
                <!--  Contact Form  -->
                <div class="contact-form">
                    <form method="post" asp-action="Contact" class="ContactUsFormModel"  asp-controller="ContactUs">
                        <div class="row">
                            <div class="col-lg-4">
                                <input class="con-field" placeholder="Name" type="text" asp-for="Name"/>
                            </div>
                            <div class="col-lg-4">
                                <input class="con-field" placeholder="Email" type="text" asp-for="Email"/>
                            </div>
                            <div class="col-lg-4">
                                <input class="con-field" id="subject" placeholder="Subject" type="text" asp-for="Subject"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <textarea  class="con-field" id="message" rows="6" placeholder="Your Message" type="text" asp-for="Message"></textarea>
                                <div class="submit-area">
                                   <input type="submit" id="submit-contact" class="btn-alt" value="Send Message">
                                    <div id="msg" class="message"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                     
                    </div>
                    <!-- End:Contact Form  -->
                   
            </div>
            <div class="col-lg-5 col-sm-6 col-xs-12">
                <div class="contact_pg_address">
                    <h3>Get In Touch</h3>
                    <div class="single_con_add">
                        <a href="#">
                            <i class="fa fa-home"></i>
                        </a>
                        <p>
                            <span>3567 New Alaska, United States</span>
                        </p>
                    </div>
                    <div class="single_con_add">
                        <a href="#">
                            <i class="fa fa-envelope"></i>
                        </a>
                        <p>
                            <span>
                                <a href="">digitalrepair@info.com</a>
                            </span>
                        </p>
                    </div>
                    <div class="single_con_add">
                        <a href="#">
                            <i class="fa fa-phone"></i>
                        </a>
                        <p>
                            <span>
                                <a href="">+77-356-278-2356</a>
                            </span>
                        </p>
                    </div>

                    <div class="contact_pg_icon">
                        <a href="#">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#">
                            <i class="fa fa-linkedin"></i>
                        </a>
                        <a href="#">
                            <i class="fa fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- End:Content  -->
        <div class="row">
            <div class="col-xs-12">
                <!-- Google Map -->
                <div id="map" class="map-container"></div>
            </div>
        </div>
    </div>
    <!-- container /- -->
</section>
<!--End Contact Section
==================================================-->